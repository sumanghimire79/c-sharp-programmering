@{
    ViewData["Title"] = "Home Page";


}





@model IEnumerable<ItemLendSystemWithLogin.Models.Item>
@* @Controller IEnumerable<ItemLendSystem.Controllers> *@

@* <p> User Name:@ViewData["UserName"]</p> *@

<div class="text-center">
    <span class="spinner-" role="status"></span>
    <h1 class="display-4 ">Welcome to Ishøj Item Lending System</h1>

    <hr />
    <em> Share and care</em>

    <hr />
    <p> lorem lorem lorem lorem lorelorem lorem lorem lorem lorelorem lorem lorem lorem lorelorem lorem lorem lorem lorelorem lorem lorem lorem lorelorem lorem lorem lorem lore</p>
    <hr />


    @Html.ActionLink("Add Items","Create","Items",null,new {@class="btn btn-success"})
    @Html.ActionLink("Lend Items","Create","Lends",null,new {@class="btn btn-success"})

    <br />
    <strong> List of all Items </strong>
    @using (Html.BeginForm("All Items", "Item", FormMethod.Get))
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.Owner.Name)
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    }
</div>
